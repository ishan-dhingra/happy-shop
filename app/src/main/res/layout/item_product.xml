<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.anythingintellect.happyshop.viewmodel.ProductItemViewModel"/>
    </data>

    <LinearLayout android:orientation="horizontal" 
        android:layout_width="match_parent"
        android:padding="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:layout_height="100dp"
            bind:imgUrl="@{vm.product.imgUrl}"
            fresco:placeholderImage="@drawable/placeholder"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="@{vm.product.name}"
                android:textColor="@color/primary_text"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/secondary_text"
                android:text="@{vm.price}"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                bind:visible="@{vm.product.underSale}"
                android:drawableLeft="@drawable/ic_on_sale"
                android:textAlignment="center"
                android:drawablePadding="3dp"
                android:layout_marginTop="5dp"
                android:text="@string/txt_sale"
                android:textColor="#f44336"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</layout>